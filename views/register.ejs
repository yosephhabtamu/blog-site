<!DOCTYPE html>
<html lang="en">
    <%- include('../public/layouts/header'); -%>

    <body>
        <!-- Navigation-->
        <%- include('../public/layouts/nav'); -%>
       
        <!-- Page Header-->
        <header class="masthead" style="background-image: url('/assets/img/contact-bg.jpg')">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="page-heading">
                            <h1>register a new account</h1>
                            <span class="subheading">create account and join the realm of bloggers!</span>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Main Content-->
        <!-- Main Content -->
<main class="mb-4">
<div class="container px-4 px-lg-5"> 
    <div class="row gx-4 gx-lg-5 justify-content-center">
    <div class="col-lg-8 col-md-10 mx-auto">

    <form action="/auth/register" method="POST">

    <div class="control-group">
    <div class="form-group floating-label-form-group controls">
    <label>User Name</label>
    <input type="text" class="form-control" placeholder="User Name"
    id="userName" name= "userName" value="<%= userPayload?.userName %>">
    <div style="font-size: 10px;color: rgb(170, 62, 62);">

    <%= errors?.find(item=>item.field === 'userName')?.message %>
    </div>
</input>
    </div>
  
    </div>

    <div class="control-group">
        <div class="form-group floating-label-form-group controls">
        <label>Email</label>
        <input type="email" rows="5" class="form-control" placeholder="Email"
         id="email" name="email" value="<%= userPayload?.email %>">
     
         <div style="font-size: 10px;color: rgb(170, 62, 62);">
         <%= errors?.find(item=>item.field === 'email')?.message %>
        </div>
        </input>
        </div>
        </div>
    <div class="control-group">
    <div class="form-group floating-label-form-group controls">
    <label>Password</label>
    <input type="password" rows="5" class="form-control" placeholder="password"
    id="password" name="password" value="<%= userPayload?.password %>">
    <div style="font-size: 10px;color: rgb(170, 62, 62);">
        <%= errors?.find(item=>item.field === 'password')?.message %></input>
    </div>
    </div>
    </div>
    <br>
    <div class="form-group">
    <button type="submit" class="btn btn-primary"
    id="sendMessageButton">Register</button>
    </div>
    </form>
    </div>
    </div>
    </div>
</main>
        <%- include('../public/layouts/footer'); -%>
        <!-- js -->
<%- include('../public/layouts/script'); -%>
       
    </body>
</html>
