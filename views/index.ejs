<!DOCTYPE html>
<html lang="en">

    <%- include('../public/layouts/header'); -%>
    
    <body>
       
        <%- include('../public/layouts/nav'); -%>
        <!-- Page Header-->
        <header class="masthead" style="background-image: url('assets/img/home-bg.jpg')">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="site-heading">
                            <h1>Blogiverse</h1>
                            <span class="subheading">The world's Bloggers in one place</span>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Main Content-->
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <% for (var i = 0; i < blogposts.length; i++) { %>
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <!-- Post preview-->
                        <div class="post-preview">
                              <p class="post-meta">
                    <%= blogposts[i].date %>
                </p>
                            <a href="post/<%= blogposts[i]._id%>">
                                <img src="../assets/img/home-bg.jpg" alt="" width="600"  height="170" style="border-radius: 6px; box-shadow:3px 3px 4px  #dedede; margin-right: 70px;" srcset="">
                                <h2 class="post-title" style="display: flex;  justify-content:space-between;" >
                                    <%= blogposts[i].title %>
                           
                                
                            </h2>
                            <h3 class="post-subtitle"><%= blogposts[i].subtitle %></h3>
                        </a>
                        <p class="post-meta">
                            <div style="display: flex; justify-content:space-between">
                               
                                <a href="#!">
                                <img src="../assets/img/home-bg.jpg" alt="" width="40"  height="40" style="border-radius: 6px; border-radius: 100%; box-shadow:3px 3px 4px  #dedede; margin: 5px;" srcset="">
                                <%= blogposts[i].username %></a>
                                <div>
                                    <a href="">
                                        <img src="../assets/img/edit.png" alt="" width="20" height="20" style="margin-right: 20px;" srcset="">
                                    </a>
                                    <a href="">
                                        <img src="../assets/img/delete.png" alt="" width="20" height="20" style="margin-right: 20px;" srcset="">
                                    </a>
                                </div>
                            </div>
                </p>
              
                    </div>
                    <!-- Divider-->
                    <hr  class="my-4" />
                    <!-- Pager-->
                    <!-- TODO:  -->
                    <!-- <div class="d-flex justify-content-end mb-4"><a class="btn btn-primary text-uppercase" href="#!">Older Posts â†’</a></div> -->
                </div>
                <% } %>
            </div>
        </div>
        <!-- Footer-->
        <%- include('../public/layouts/footer'); -%>
        <!-- js -->
<%- include('../public/layouts/script'); -%>
       
     
    </body>
</html>
